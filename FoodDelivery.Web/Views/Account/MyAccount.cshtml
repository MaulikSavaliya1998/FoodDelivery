@model FoodDelivery.Data.Models.User
@{
    ViewBag.Title = "MyAccount";
}

<div class="container">
    <div class="w-50 p-1  my-3 bg-primary">Account</div>
    <div class="form-group row mt-4">
        <label class="mx-5"> Email </label>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new {@class="form-control",@Readonly="true"}})
    </div>
    <div class="form-group row">
        <label class="mx-5">Password</label>
        @Html.ActionLink("CHANGE PASSWORD", "ChangePassword", "Account", new { code = Model},null)
    </div>
    <div class="w-50 p-1 bg-primary">Personal</div>
    <div class="m-3">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })

            </div>

            <div class="form-group row">
                <label class="mr-4">First Name</label>
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <div class="form-group row">
                <label class="mr-4">Last Name</label>
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <div class="form-group row">
                <label class="ml-1 mr-5">Gender</label>
                <label class="mr-3">Male</label>
                @Html.RadioButton("Gender", "Male")
                <label class="ml-4 mr-3">Female</label>
                @Html.RadioButton("Gender", "Female")
            </div>
            <div class="form-group row">
                <label class="ml-2 mr-5">Phone</label>
                @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" }, @type = "phone" })
                @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger pl-2" })
            </div>

            <div class="form-group row">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
        }
    </div>
</div>

